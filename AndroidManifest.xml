<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.dimond.countdowntimer" android:versionCode="1"
	android:versionName="0.1">
	<application android:icon="@drawable/icon" android:label="@string/app_name">

		<receiver android:name="CountdownTimerAppWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="de.dimond.countdowntimer.INTENT_NEW_TIMER" />
				<action android:name="de.dimond.countdowntimer.INTENT_CANCEL_TIMER" />
				<action android:name="de.dimond.countdowntimer.INTENT_ALARM_ALERT" />
			</intent-filter>

			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/countdown_timer" />
		</receiver>

		<activity android:name="NewTimerActivity" android:theme="@android:style/Theme.Dialog"></activity>
		<activity android:name="SettingsActivity"></activity>
	</application>
	<uses-sdk android:minSdkVersion="4" />

	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest> 